{
    "name": "api-workout",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only --cls ./src/index.ts",
        "dev:debug": "ts-node-dev --inspect --respawn --cls --transpile-only ./src/index.ts",
        "postinstall": "tsc",
        "start": "node ./build/index.js",
        "build": "tsc",
        "typeorm": "typeorm-ts-node-commonjs",
        "typeorm:create": "typeorm migration:create",
        "typeorm:revert": "npm run typeorm migration:revert -- -d ./src/main/config/database.config.ts",
        "typeorm:generate": "npm run typeorm migration:generate -- -d ./src/main/config/database.config.ts",
        "typeorm:run": "npm run typeorm migration:run -- -d ./src/main/config/database.config.ts",
        "test": "cross-env DB_ENV=test jest --silent --noStackTrace --runInBand --detectOpenHandles",
        "test:verbose": "cross-env DB_ENV=test jest --verbose -runInBand --detectOpenHandles",
        "test:coverage": "cross-env DB_ENV=test jest --runInBand --coverage --detectOpenHandles",
        "test:watch": "cross-env DB_ENV=test jest --silent --noStackTrace --runInBand --watchAll",
        "typeorm:run:test": "cross-env DB_ENV=test npm run typeorm migration:run -- -d ./src/main/config/database.config.ts",
        "typeorm:generate:test": "cross-env DB_ENV=test npm run typeorm:generate -- tests/app/shared/database/migrations/TestMigration",
        "test:setup": "rimraf db.sqlite3 && rimraf ./tests/app/shared/database/migrations && npm run typeorm:generate:test && npm run typeorm:run:test"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.4",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^20.4.9",
        "@types/pg": "^8.10.2",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.1",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "cpf-cnpj-validator": "^1.0.3",
        "cross-env": "^7.0.3",
        "dotenv": "^16.1.4",
        "express": "^4.18.2",
        "ioredis": "^5.3.2",
        "jest": "^29.6.4",
        "jsonwebtoken": "^9.0.1",
        "pg": "^8.11.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^5.0.1",
        "sqlite": "^5.0.1",
        "sqlite3": "^5.1.6",
        "supertest": "^6.3.3",
        "typeorm": "^0.3.11",
        "uuid": "^9.0.0"
    }
}
